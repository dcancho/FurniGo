// Schema for the objects in MongoDB database.
{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Schema for the objects in MongoDB database",
	"type": "object",
	"properties": {
		"users": {
			"type": "object",
			"properties": {
				"username": {
					"type": "string"
				},
				"password": {
					"type": "string"
				},
				"email": {
					"type": "string"
				},
				"role": {
					"type": "string"
				}
			},
			"required": ["username", "password", "email", "role"]
		},
		"products": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"price": {
					"type": "number"
				},
				"quantity": {
					"type": "number"
				}
			},
			"required": ["name", "price", "quantity"]
		},
		"orders": {
			"type": "object",
			"properties": {
				"userId": {
					"type": "string"
				},
				"productId": {
					"type": "string"
				},
				"quantity": {
					"type": "number"
				},
				"totalPrice": {
					"type": "number"
				}
			},
			"required": ["userId", "productId", "quantity", "totalPrice"]
		}
	}
}